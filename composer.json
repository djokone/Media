{
    "name": "djokone/media",
    "description": "Media plugin for CakePHP",
    "type": "cakephp-plugin",
    "minimum-stability" : "alpha",
    "require": {
        "composer/installers": "~1.0",
        "php": ">=5.4",
        "cakephp/cakephp": "3.*",
        "intervention/image": "^2.3@dev",
        "cakephp/plugin-installer": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "Media\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Media\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    },
    "extra" : {
        "installer-paths": {
            "plugins/Media" : ["djokone/Media"]
        }
    }
}
